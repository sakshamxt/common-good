# .env.example

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/commongood_dev
# For cloud MongoDB (e.g., MongoDB Atlas), use the full connection string:
# DATABASE_URL=mongodb+srv://<username>:<password>@<cluster-url>/commongood_dev?retryWrites=true&w=majority


# JWT Configuration
JWT_SECRET=your-very-strong-jwt-secret-key-for-commongood
JWT_EXPIRES_IN=90d # e.g., 90 days
JWT_COOKIE_EXPIRES_IN=90 # e.g., 90 (for cookie maxAge, if you use cookies for JWT)

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret